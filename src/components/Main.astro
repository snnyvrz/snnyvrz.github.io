---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import KnowMore from "./KnowMore.astro";
---

<Base>
  <Hero />
  <KnowMore />
  <div
    class="flex justify-center align-middle w-[100%] max-w-4xl p-8 self-center border-x-2"
  >
    <a href="/cv.pdf" download="SinaNiyavarziResume">
      <button class="btn btn-wide btn-outline btn-primary"
        >Download CV
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-download"
          ><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline
            points="7 10 12 15 17 10"></polyline><line
            x1="12"
            x2="12"
            y1="15"
            y2="3"></line></svg
        >
      </button>
    </a>
  </div>
</Base>
