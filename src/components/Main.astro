---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import KnowMore from "./KnowMore.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Base>
  <Hero />
  <KnowMore />
  <div
    class="flex flex-col justify-center align-middle w-[100%] max-w-4xl py-8 self-center border-x-2"
  >
    <div class="divider">
      {t("downloadCV.title")}
    </div>
    <a class="mx-auto" href="/cv.pdf" download="SinaNiyavarziResume.pdf">
      <button class="btn btn-wide btn-outline btn-primary"
        >{t("downloadCV")}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-download"
          ><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline
            points="7 10 12 15 17 10"></polyline><line
            x1="12"
            x2="12"
            y1="15"
            y2="3"></line></svg
        >
      </button>
    </a>
  </div>
</Base>
